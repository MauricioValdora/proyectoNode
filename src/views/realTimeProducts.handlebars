<div class="container">
    <h1>Productos actualizados en tiempo real</h1>
    <div class="contenedorBtn">
        <a href="/">
            <button class="btn">Productos estaticos</button>
        </a>
        <a href="./chat">
            <button class="btn">Chat</button>
        </a>
    </div>
    <ul id="product-list" class="listaProductosContenedor">
        {{#each products}}
        <li id="{{id}}" class="item listaProductos">
            <h2>{{title}}</h2>
            <p>Descripción: {{description}}</p>
            <p>Código: {{code}}</p>
            <p>Precio: {{price}}</p>
            <p>Stock: {{stock}}</p>
            <p>Categoría: {{category}}</p>
            <p>Estado: {{#if status}}Disponible{{else}}No disponible{{/if}}</p>
        </li>
        {{/each}}
    </ul>
</div>

<script src="/socket.io/socket.io.js"></script>
<script src="/js/index.js"></script>